<div class="form-container">
  <div id="bub-part-a"></div>
  <div id="bub-part-b"></div>
  <div id="bub-part-c"></div>
  <div>
    <%= simple_form_for @user, html: { class: 'chatealo-form' } do |f| %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :email, disabled: true %>
      <%= f.button :submit, class: 'form-button' %>
    <% end %>
  </div>
  <div id="bub-part-c"></div>
  <div id="bub-part-b"></div>
  <div id="bub-part-a"></div>
  <div id="speech-arrow">
    <div id="arrow-w"></div>
    <div id="arrow-x"></div>
    <div id="arrow-y"></div>
    <div id="arrow-z"></div>
  </div>
</div>
